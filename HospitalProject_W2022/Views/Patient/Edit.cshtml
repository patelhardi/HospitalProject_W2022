@model HospitalProject_W2022.Models.PatientDto

@{
    ViewBag.Title = "Edit";
}

<h2>Update Patient</h2>

<div>
    <a href="/Patient/List" class="btn btn-dblue btn-lg" role="button">
        <span class="glyphicon glyphicon-arrow-left"></span> Back to
        <br />the Patient list
    </a>
</div>

<form method="POST" action="/Patient/Update/@Model.PID" enctype="multipart/form-data" class="editForm">
    <div style="display:none;">
        <label>Patient ID:</label>
        @* Pass through the patient ID *@
        <input type="text" name="PID" value="@Model.PID" />
    </div>
    <div class="form-group">
        <label>First Name:</label>
        <input type="text" name="FName" value="@Model.FName" />
    </div>
    <div class="form-group">
        <label>Last Name:</label>
        <input type="text" name="LName" value="@Model.LName" />
    </div>
    <div class="form-group">
        <label>Health Card:</label>
        <input type="text" name="HC" value="@Model.HC" />
    </div>
    <div class="form-group">
        <label>Date of birth:</label>
        <input type="text" name="DOB" value="@Model.DOB.ToShortDateString()" />
    </div>
    <div class="form-group">
        <label>Address:</label>
        <input type="text" name="Address" value="@Model.Address" />
    </div>
    <div class="form-group">
        <label>Contact</label>
        <input type="number" name="Contact" value="@Model.Contact" />
    </div>
    <!--<div class="form-group">
        <input type="submit" value="Update Patient" />
    </div>-->
    <button type="submit" class="btn btn-primary" value="Update Patient">Update Patient</button>
</form>

