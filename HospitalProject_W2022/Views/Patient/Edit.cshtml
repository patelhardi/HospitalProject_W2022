@model HospitalProject_W2022.Models.PatientsDto
@{
    ViewBag.Title = "Edit";
}

<h2>Update a patient</h2>

<form action="/patient/Update/@Model.PID" method="post">
    <div>
        <label>Patient Name:</label> <input type="text" name="FName" />
    </div>
    <input type="hidden" name="PID" value="@Model.PID" />
    <div>
        <input type="submit" value="Update Patient" />
    </div>
</form>
