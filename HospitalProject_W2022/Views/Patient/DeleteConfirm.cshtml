@model HospitalProject_W2022.Models.PatientDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<a href="/Patient/List" class="btn btn-dblue btn-lg" role="button">
    <span class="glyphicon glyphicon-arrow-left"></span> Back to
    <br />the Patient list
</a>

<h2 class="text-center">Are you sure you want to delete @Model.FName @Model.LName's data?</h2>
<form action="/Patient/Delete/@Model.PID" method="POST" class="text-center">
    <button type="submit" class="delBtn" value="Add Patient"><span class="trashIcon glyphicon glyphicon-trash"></span> Delete</button>
</form>


