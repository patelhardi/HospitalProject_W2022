@model HospitalProject_W2022.Models.ViewModels.DetailsPatient
@{
    ViewBag.Title = "Details";
}

<div id="containershow">
    <nav>
        <!-- Back to patient list -->
        <a href="/patient/list" class="btn btn-dblue btn-lg" role="button">
            <span class="glyphicon glyphicon-arrow-left"></span> Back to
            <br />the Patient list
        </a>
        <!-- Update patient button -->
        <a href="/patient/edit/@Model.SelectedPatient.PID" class="btn btn-dblue btn-lg" role="button">
            <span class="glyphicon glyphicon-home glyphsize"></span>
            <br />Update
            <span class="glyphicon glyphicon-edit"></span>
        </a>
        <!-- Delete patient button -->
        <a style="color:#ab2020;" href="/patient/deleteconfirm/@Model.SelectedPatient.PID" class="btn btn-dblue btn-lg" role="button">
            <span class="glyphicon glyphicon-home glyphsize"></span>
            <br />Delete
            <span class="glyphicon glyphicon-minus"></span>
        </a>
    </nav>
    <div>IsAdmin: @Model.IsAdmin </div>

    <h2>Patient Details: @Model.SelectedPatient.FName @Model.SelectedPatient.LName</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Health Card</th>
                <th scope="col">Date of birth</th>
                <th scope="col">Contact</th>
                <th scope="col">Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.SelectedPatient.PID</th>
                <td>@Model.SelectedPatient.HC</td>
                <td>@Model.SelectedPatient.DOB.ToLongDateString()</td>
                <td>@Model.SelectedPatient.Contact</td>
                <td>@Model.SelectedPatient.Address</td>
            </tr>
        </tbody>
    </table>
</div>

<h3>List of Appointments for @Model.SelectedPatient.FName @Model.SelectedPatient.LName</h3>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Time</th>
                <th scope="col">Date</th>
                <th scope="col">Reason</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model.RelatedAppointments)
            {
                <tr>
                    <td><a href="/Appointment/Details/@appointment.AID">@appointment.Time</a></td>
                    <td><a href="/Appointment/Details/@appointment.AID">@appointment.Date.ToLongDateString()</a></td>
                    <td><a href="/Appointment/Details/@appointment.AID"> @appointment.Reason</a></td>
                </tr>
            }
        </tbody>
    </table>    
</div>
