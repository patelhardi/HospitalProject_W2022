@model HospitalProject_W2022.Models.ViewModels.ShiftList
@{
    ViewBag.Title = "List";
}

<div>
    <a href="/Shift/New" class="btn btn-dblue btn-lg" role="button">
        <span class="glyphicon glyphicon-user glyphsize"></span>
        <br />Add New
        <span class="glyphicon glyphicon-plus green"></span>
        <br />Shift
    </a>
</div>
<div>IsAdmin: @Model.IsAdmin </div>

<h2>List of Shifts</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Date</th>
            <th scope="col">Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shift in Model.Shifts)
        {
            <tr>
                <th scope="row">@shift.SHID</th>
                <td><a href="/Shift/Details/@shift.SHID">@shift.Date.ToLongDateString()</a></td>
                <td>@shift.Type</td>
                <td><a href="/Shift/Details/@shift.SHID"><span class="viewLink glyphicon glyphicon-eye-open"></span></a></td>
                <td><a href="/Shift/Edit/@shift.SHID"><span class="editLink glyphicon glyphicon-pencil"></span></a></td>
                <td><a href="/Shift/DeleteConfirm/@shift.SHID"><span class="delLink glyphicon glyphicon-trash"></span></a></td>
            </tr>
        }
    </tbody>
</table>

