@model HospitalProject_W2022.Models.ShiftDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<a href="/Shift/List" class="btn btn-dblue btn-lg" role="button">
    <span class="glyphicon glyphicon-arrow-left"></span> Back to
    <br />the Shift list
</a>

<h2 class="text-center">Do you want to Delete @Model.Type Shift on @Model.Date.ToLongDateString() ?</h2>
<a href="/Shift/List">Cancel</a>
<form action="/Shift/Delete/@Model.SHID" method="POST" class="text-center">
    <button type="submit" class="delBtn" value="Delete Shift"><span class="trashIcon glyphicon glyphicon-trash"></span> Delete</button>
</form>

