@model HospitalProject_W2022.Models.ShiftDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Do you want to Delete @Model.Type Shift on @Model.Date.ToLongDateString() ?</h2>

<a href="/Shift/List" class="btn btn-dblue btn-lg" role="button">
    <span class="glyphicon glyphicon-arrow-left"></span> Back to
    <br />the Shift list
</a>

<br />

<div>
    <form action="/Shift/Delete/@Model.SHID" method="POST" style="border-radius: 5px; background-color: #f2f2f2; padding: 20px;">
        <input type="submit" value="Delete" style="background-color: gray; color: white; padding: 12px 20px; border: none; border-radius: 4px;" />
    </form>
</div>

