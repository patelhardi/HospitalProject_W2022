@model HospitalProject_W2022.Models.ViewModels.UpdateStaff
@{
    ViewBag.Title = "Edit";
}

<h2>Update Staff</h2>

<div>
    <a href="/Staff/List" class="btn btn-dblue btn-lg" role="button">
        <span class="glyphicon glyphicon-arrow-left"></span> Back to
        <br />the Staff list
    </a>
</div>

<form method="POST" action="/Staff/Update/@Model.SelectedStaff.SID" enctype="multipart/form-data" style="border-radius: 5px; background-color: #f2f2f2; padding: 20px;">
    <div style="display:none;">
        <label>Staff ID:</label>
        @* Pass through the staff ID *@
        <input type="text" name="SID" value="@Model.SelectedStaff.SID" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div>
        <label>First Name:</label>
        <input type="text" name="FName" value="@Model.SelectedStaff.FName" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div>
        <label>Last Name:</label>
        <input type="text" name="LName" value="@Model.SelectedStaff.LName" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div>
        <label>Date of birth:</label>
        <input type="date" name="DOB" value="@Model.SelectedStaff.DOB.ToShortDateString()" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div>
        <label>Contact</label>
        <input type="number" name="Contact" value="@Model.SelectedStaff.Contact" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div>
        <label style="padding: 12px 12px 12px 0; display: inline-block;">Department:</label>
        <select name="DID" style="padding: 12px 12px 12px 0; display: inline-block;">
            @foreach (var department in Model.DepartmentOptions)
            {
                string selected = "";
                if (department.DID == Model.SelectedStaff.DID)
                {
                    selected = "selected";
                }
                <option value="@department.DID" @selected>@department.DName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Update Staff" style="background-color: gray; color: white; padding: 12px 20px; border: none; border-radius: 4px;" />
    </div>
</form>

<hr />

<h3>List of Shifts for @Model.SelectedStaff.FName @Model.SelectedStaff.LName</h3>
<div>
    @foreach (var shifts in Model.ShiftOptions)
    {
        <label style="padding: 12px 12px 12px 0; display: inline-block;">@shifts.Date.ToLongDateString() | @shifts.Type</label>
        <br />
    }
</div>

