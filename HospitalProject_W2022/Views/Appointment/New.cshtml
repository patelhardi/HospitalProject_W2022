@model IEnumerable<HospitalProject_W2022.Models.PatientDto>
@{
    ViewBag.Title = "New";
}

<div>
    <a href="/Appointment/List" class="btn btn-dblue btn-lg" role="button">
        <span class="glyphicon glyphicon-arrow-left"></span> Back to
        <br />the Appointment list
    </a>
</div>

<h2>Create New Appointment</h2>

<form action="/Appointment/Create" method="POST" class="newForm">
    <div class="form-group">
        <label>Date:</label>
        <input type="date" name="date" id="myDate" />
    </div>
    <div class="form-group">
        <label>Time:</label>
        <input type="text" name="time" />
    </div>
    <div class="form-group">
        <label>Reason:</label>
        <input type="text" name="reason" />
    </div>
    <div class="form-group">
        <label>Patient:</label>
        <select name="PID">
            @foreach (var patient in Model)
            {
                <option value="@patient.PID">@patient.FName @patient.LName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary" value="Add Appontment">Create Appointment</button>
</form>

<!--Reference: https://stackoverflow.com/questions/43274559/how-do-i-restrict-past-dates-in-html5-input-type-date-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    $(function () {
        var dtToday = new Date();

        var month = dtToday.getMonth() + 1;
        var day = dtToday.getDate();
        var year = dtToday.getFullYear();
        if (month < 10)
            month = '0' + month.toString();
        if (day < 10)
            day = '0' + day.toString();

        var maxDate = year + '-' + month + '-' + day;
        $('#myDate').attr('min', maxDate);
    });
</script>

