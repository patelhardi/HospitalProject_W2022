@model IEnumerable<HospitalProject_W2022.Models.PatientDto>
@{
    ViewBag.Title = "New";
}

<div>
    <a href="/Appointment/List" class="btn btn-dblue btn-lg" role="button">
        <span class="glyphicon glyphicon-arrow-left"></span> Back to
        <br />the Appointment list
    </a>
</div>

<h2>Create New Appointment</h2>

<form action="/Appointment/Create" method="POST" style="border-radius: 5px; background-color: #f2f2f2; padding: 20px;">
    <div>
        <label style="padding: 12px 12px 12px 0; display: inline-block;">Date:</label>
        <input type="date" name="date" id="myDate" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div>
        <label style="padding: 12px 12px 12px 0; display: inline-block;">Time:</label>
        <input type="text" name="time" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div>
        <label style="padding: 12px 12px 12px 0; display: inline-block;">Reason:</label>
        <input type="text" name="reason" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div>
        <label style="padding: 12px 12px 12px 0; display: inline-block;">Patient:</label>
        <select name="PID" style="padding: 12px 12px 12px 0; display: inline-block;">
            @foreach (var patient in Model)
            {
                <option value="@patient.PID">@patient.FName @patient.LName</option>
            }
        </select>
    </div>
