@model HospitalProject_W2022.Models.AppointmentDto
@{
    ViewBag.Title = "DeleteConfirm";
}


<a href="/Appointment/List" class="btn btn-dblue btn-lg" role="button">
    <span class="glyphicon glyphicon-arrow-left"></span> Back to
    <br />the Appointment list
</a>

<br />

<h2 class="text-center">Are you sure you want to delete @Model.FName @Model.LName's appointment on @Model.Date for @Model.Reason at @Model.Time?</h2>
<a href="/Appointment/List">Cancel</a>
<form action="/Appointment/Delete/@Model.AID" method="POST" class="text-center">
    <button type="submit" class="delBtn" value="Delete Appointment"><span class="trashIcon glyphicon glyphicon-trash"></span> Delete</button>
</form>


